<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog 
        id="addDialog" 
        title="Create Leaved Request" 
        draggable="true" 
        resizable="true"
        contentWidth="400px">
        <VBox class="sapUiSmallMargin">
            <Label text="Loại phép:" required="true"/>
            <ComboBox width="100%" class="sapUiSmallMarginBottom"></ComboBox>

            <Label text="Ngày bắt đầu:" required="true"/>
            <DatePicker value="" class="sapUiSmallMarginBottom"/>

            <Label text="Ngày kết thúc:" required="true"/>
            <DatePicker value="" class="sapUiSmallMarginBottom"/>

            <Label text="Thời gian nghỉ:" required="true"/>
            <RadioButtonGroup class="sapUiSmallMarginBottom" columns="3">
                <RadioButton text="Full Day"/>
                <RadioButton text="Morning"/>
                <RadioButton text="Afternoon"/>
            </RadioButtonGroup>

            <Label text="Lý do xin nghỉ:" required="true"/>
            <TextArea width="100%" rows="4"></TextArea>
        </VBox>

       <buttons>
        <Button text="Save Draft" type="Ghost" press=".onSaveAdd" icon="sap-icon://save"/>
        <Button text="Send" type="Emphasized" press=".onSendAdd" icon="sap-icon://paper-plane"/>
        <Button text="Cancel" press=".onCancelAdd" />
       </buttons>
    </Dialog>
</core:FragmentDefinition>
