<mvc:View xmlns:table="sap.ui.table"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f" controllerName="base.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:svm="sap.ui.comp.smartvariants"
    xmlns:fb="sap.ui.comp.filterbar">
    <f:DynamicPage headerExpanded="true">
        <f:title>
            <f:DynamicPageTitle >
                <f:heading>
                    <svm:SmartVariantManagement id="svm" showExecuteOnSelection="true" />
                </f:heading>
                <f:expandedContent>
                    <Label id="expandedLabel" text="No filters active" />
                </f:expandedContent>
                <f:snappedContent>
                    <Label id="snappedLabel" text="No filters active" />
                </f:snappedContent>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader >
                <f:content>
                    <fb:FilterBar id="filterBar" persistencyKey="myPersKey" useToolbar="false" search="onSearch" filterChange="onFilterChange" afterVariantLoad="onAfterVariantLoad">
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem name="LeaveType" label="Loại phép" groupName="Group1" visibleInFilterBar="true">
                                <fb:control>
                                    <ComboBox name="LeaveType" selectionChange="onSelectionChange" items="{path: 'master>/leaveType'}">
                                         <items>
                                            <core:Item key="{master>FieldKey}" text="{master>FieldValue}" />
                                        </items>
                                    </ComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                            
                            <fb:FilterGroupItem name="Status" label="Trạng thái" groupName="Group2" visibleInFilterBar="true">
                                <fb:control>
                                    <ComboBox
                                        name="Status"
                                        selectionChange="onSelectionChange"
                                        items="{path: 'master>/status'}"
                                    >
                                        <items>
                                            <core:Item key="{master>FieldKey}" text="{master>FieldValue}" />
                                        </items>
                                    </ComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem name="TimeSlot" label="TimeSlot" groupName="Group3" visibleInFilterBar="true">
                                <fb:control>
                                    <ComboBox
                                        name="TimeSlot"
                                        selectionChange="onSelectionChange"
                                        items="{path: 'master>/timeSlot'}"
                                    >
                                        <items>
                                            <core:Item key="{master>FieldKey}" text="{master>FieldValue}" />
                                        </items>
                                    </ComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <table:Table id="table" rows="{table>/rows}" selectionMode="MultiToggle" rowSelectionChange="onRowSelectionChange" rowActionCount="1" >
                <table:extension>
                    <OverflowToolbar class="sapMTBHeader-CTX">
                        <Title text="Leave Request"></Title>
                        <ToolbarSpacer/>
                        <Button id="btnAdd" text="Add" tooltip="Add" type="Emphasized" icon="sap-icon://add" press="onAdd"></Button>
                        <Button id="btnEdit" text="Edit" tooltip="Edit" type="Emphasized" icon="sap-icon://edit" enabled="false" press="onEdit"/>
                        <Button id="btnDelete" text="Delete" tooltip="Delete" type="Reject" icon="sap-icon://delete" enabled="false" press="onDelete"/>
                        <ToolbarSeparator/>
                        <Button icon="sap-icon://excel-attachment" tooltip="Export to Excel" press="onExportExcel"/>
                    </OverflowToolbar>
                </table:extension>
                <table:noData>
                    <IllustratedMessage illustrationType="sapIllus-NoSearchResults" enableVerticalResponsiveness="true"/>
                </table:noData>
                <table:columns>
                    <table:Column id="RequestId" sortProperty="RequestId" filterProperty="RequestId">
                        <table:label>
                            <Label text="Mã đơn nghỉ"></Label>
                        </table:label>
                        <table:template>
                            <ObjectIdentifier title="{table>RequestId}" titleActive="true"></ObjectIdentifier>
                        </table:template>
                    </table:Column>

                    <table:Column >
                        <table:label>
                            <Label text="Loại phép"></Label>
                        </table:label>
                        <table:template>
                            <Text text="{table>LeaveType}"></Text>
                        </table:template>
                    </table:Column>

                    <table:Column>
                        <table:label>
                            <Label text="Ngày bắt đầu nghỉ"/>
                        </table:label>
                        <table:template>
                            <Text text="{
                                path: 'table>StartDate',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: { pattern: 'dd.MM.yyyy' }
                            }" />
                        </table:template>
                    </table:Column>

                    <table:Column >
                        <table:label>
                            <Label text="Ngày kết thúc nghỉ"/>
                        </table:label>
                        <table:template>
                            <Text text="{
                                path: 'table>EndDate',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: { pattern: 'dd.MM.yyyy' }
                            }" />
                        </table:template>
                    </table:Column>

                    <table:Column >
                        <table:label>
                            <Label text="TimeSlot"/>
                        </table:label>
                        <table:template>
                            <Text text="{table>TimeSlot}"/>
                        </table:template>
                    </table:Column>

                    <table:Column >
                        <table:label>
                            <Label text="Lý do xin nghỉ"/>
                        </table:label>
                        <table:template>
                            <Text text="{table>Reason}"/>
                        </table:template>
                    </table:Column>

                    <table:Column >
                        <table:label>
                            <Label text="Trạng thái"/>
                        </table:label>
                        <table:template>
                            <ObjectStatus
                                text="{path: 'table>Status', formatter: '.formatStatusText'}"
                                state="{path: 'table>Status', formatter: '.formatStatusState'}"
                                inverted="true"
                            />
                        </table:template>
                    </table:Column>
                </table:columns>
                <table:rowActionTemplate>
                    <table:RowAction >
                        <table:RowActionItem type="Navigation"></table:RowActionItem>
                    </table:RowAction>
                </table:rowActionTemplate>
            </table:Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
